<header class="header-navbar row">
<div class="col-xs-6">
  <%= link_to root_path do %>
    <%= image_tag 'logo.png', class: 'brand-logo', width: 160, height: 60 %>
  <% end %>
</div>
<div class="col-xs-6">
  <nav class="title-nav">
    <ul>
      <% if signed_in?  && current_user.admin %>
        <li><%= link_to 'Admin', admin_root_path %>
      <% end %>
        <li><%= link_to 'Sign In', '' %>
        <li><%= link_to 'Blog', '' %>
        <li><%= link_to 'Contact ', contact_path%>
    </ul>
  </nav>
</div>
</header>
<div class="col-sm-6 col-sm-offset-3">
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %> flash-alert"><%= value %></div>
  <% end %>
</div>

