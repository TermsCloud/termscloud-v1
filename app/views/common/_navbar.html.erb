<header class="header-navbar row">
<div class="col-xs-6">
  <%= link_to root_path do %>
    <%= image_tag 'logo.png', class: 'brand-logo', width: 160, height: 60 %>
  <% end %>
</div>
<div class="col-xs-6">
  <div class="burger visible-xs" onClick="toggleMobileNav();">
    <div class="burger-strip"></div>
    <div class="burger-strip"></div>
    <div class="burger-strip"></div>
  </div> 
  <nav class="title-nav hidden-xs">
    <ul>
      <% if signed_in?  && current_user.admin %>
        <li><%= link_to 'Admin', admin_root_path %>
      <% end %>
      <li><%= link_to 'Sign In', '' %>
      <li><%= link_to 'Blog', '' %>
      <li><%= link_to 'Contact ', contact_path%>
  </ul>
  </nav>
</div>
</header>
<nav id="mobile-nav" class="mobile-nav row">
  <ul>
    <% if signed_in?  && current_user.admin %>
      <li><%= link_to 'Admin', admin_root_path %>
    <% end %>
    <li><%= link_to 'Sign In', '' %>
    <li><%= link_to 'Blog', '' %>
    <li><%= link_to 'Contact ', contact_path%>
</ul>
</nav>



<div class="col-sm-6 col-sm-offset-3">
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %> flash-alert"><%= value %></div>
  <% end %>
</div>

